<Window x:Class="CoursWpfM2I.DataBindingPersonneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursWpfM2I"
        mc:Ignorable="d"
        Title="DataBindingPersonneWindow" Height="450" Width="800">
    <Grid>
        <Label Content="{Binding Nom}" HorizontalAlignment="Left" Margin="47,210,0,0" VerticalAlignment="Top" Height="42" Width="310"/>
        <Label Content="{Binding Prenom}" HorizontalAlignment="Left" Margin="47,257,0,0" VerticalAlignment="Top" Height="42" Width="310"/>
        <TextBox HorizontalAlignment="Left" Margin="47,35,0,0" TextWrapping="Wrap" Text="{Binding Nom, Mode =OneWayToSource}" VerticalAlignment="Top" Height="36" Width="117"/>
        <TextBox HorizontalAlignment="Left" Margin="47,76,0,0" TextWrapping="Wrap" Text="{Binding Prenom, Mode=OneWayToSource}" VerticalAlignment="Top" Height="36" Width="117"/>

    </Grid>
</Window>
